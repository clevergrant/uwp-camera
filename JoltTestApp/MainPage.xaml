<Page
    x:Class="JoltTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JoltTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="Black">
		<ScrollViewer Margin="0,50,0,0" HorizontalAlignment="Left" Width="333" VerticalScrollBarVisibility="Hidden">
			<StackPanel x:Name="JoltImages" HorizontalAlignment="Left" VerticalAlignment="Top"></StackPanel>
		</ScrollViewer>
		<Button Content="Camera" HorizontalAlignment="Right" Margin="0,50,50,0" VerticalAlignment="Top" Click="Button_Click" MinWidth="90" MinHeight="32" ScrollViewer.VerticalScrollBarVisibility="Disabled" Canvas.ZIndex="5" RequestedTheme="Dark"/>
	</Grid>
</Page>
